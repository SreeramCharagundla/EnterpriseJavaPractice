<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="OrderPU" transaction-type="JTA">
        <!-- This must match the JNDI name of your datasource in WildFly -->
        <jta-data-source>java:/jdbc/OrderDS</jta-data-source>

        <!-- Explicitly list our entity class -->
        <class>com.ordermanagement.entity.OrderEntity</class>

        <properties>
            <!-- We already created the table in SQL Server -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <!-- Optional: show SQL in server logs while debugging -->
            <!-- <property name="hibernate.show_sql" value="true"/> -->
            <!-- <property name="hibernate.format_sql" value="true"/> -->
        </properties>
    </persistence-unit>

</persistence>
